<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
<div class="container-fluid">

<div class="row mt-4 mx-auto text-center">
  <div class="col-md-12 new-game-container">
    <h3>Create a New Game:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Game Name:</label>
        <input class="form-input" style="max-width: 650px; width: 100%; margin: 0 auto;" type="text" id="post-name" name="post-name" placeholder="Enter name"/>
      </div>
      {{!-- <div class="form-group">
        <label for="post-funding">Devolopment Costs ($):</label>
        <input class="form-input" style="max-width: 750px; width: 100%; margin: 0 auto;" type="number" id="post-funding" name="post-funding" placeholder="Enter price" />
      </div> --}}
      <div class="form-group">
        <label for="post-desc">Description:</label>
        <textarea class="form-input" style="max-width: 850px; width: 100%; margin: 0 auto;" id="post-desc" name="post-desc" placeholder="Enter description"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-12 post-list post-list-container">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
<script src="./js/profile.js"></script>
