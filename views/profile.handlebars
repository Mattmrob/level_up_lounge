<div class="welcomeContainer">
    <h2 class="welcomeMessage">Welcome, {{name}}!</h2>
</div>

<div class="container-fluid">

<div class="row mt-4 mx-auto text-center">
  <div class="col-md-12 new-game-container">
    <h3>Create a New Game:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Game Name:</label>
        <input class="form-input" style="max-width: 650px; width: 100%; margin: 0 auto;" type="text" id="post-name" name="post-name" placeholder="Enter name"/>
      </div>
      <div class="form-group">
        <label for="post-desc">Description:</label>
        <textarea class="form-input" style="max-width: 850px; width: 100%; height: 200px; margin: 0 auto;" id="post-desc" name="post-desc" placeholder="Enter description"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="createButton">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-12 post-list post-list-container">
    <h3>Current Posts:</h3>

    <div class="postsContainer mt-4">
    
    {{#each posts as |post|}}
      <div class="individualPost">
        <h4><a class="indiPostTitle" href="/post/{{post.id}}">{{post.name}}</a></h4>
        <button class="btn btnOverride" data-id="{{post.id}}">DELETE</button>
      </div>
    {{/each}}
  </div>
  </div>
  {{/if}}
</div>
<script src="./js/profile.js"></script>