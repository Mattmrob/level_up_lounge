<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
  <div class="col-md-12 mb-5 postCardEntire">
      <h2 class="postTitleSection">
        <a class="postTitle" href="/post/{{post.id}}">{{post.name}}</a>
      </h2>
      <div class="titleBorder"></div>
      <p class="postAuthor">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
      <div class="col-md-12 descriptionContainer">
        <p class="postDescription">
          {{post.description}}
        </p>
      </div>
    <div class="postVotes">
      {{!-- <button class="upvote">Dvote</button>
      <p class="postVoteValue">{{post.needed_funding}}</p>
      <button class="downvote">Uvote</button> --}}
    </div>
  </div>
{{/each}}
