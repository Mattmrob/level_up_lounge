<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LevelUpLounge</title>
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<style>
  .backgroundImage {
  background-image: url("assets/placeholder.png");
  background-repeat: no-repeat;
  width: 100%;
  height: 100%;
  background-size: cover;
  position: fixed;
}
</style>

<body class="mainBackground">

  <div class="backgroundImage"></div>

  {{!-- LOGO --}}
  <div class="logoBlock">
    <a href="/"><img src="assets/lul_logo.png" alt="Level Up Lounge Logo" class="lulgo"></a>
  </div>

  {{!-- LOGIN --}}
  <div class="loginBlock">
    {{#if logged_in}}
      <a href="/profile"><h1 class="accountButton">Account</h1></a>
      <button id="logout" class="logoutButton">logout</button>
    {{else}}
      <a href="/login"><h1 class="loginHomeButton">Log In!</h1></a>
    {{/if}}
  </div>

  {{!-- RENDER START --}}
  <main class="container container-fluid">
    {{{body}}}
  </main>
  {{!-- RENDER END --}}

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>
